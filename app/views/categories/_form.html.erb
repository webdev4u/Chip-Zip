<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @category.id != 1 %>
    <div class="field">
      <%= f.label :parent %><br />
      <%= select_tag "category[parent]", options_from_collection_for_select(@parents, "id", "name", @category.parent) %>
    </div>
  <% else %>
    <%= hidden_field_tag name="category[parent]", '0' %>
  <% end %>
  <div class="field">
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :menu_order %><br />
    <%= f.number_field :menu_order %>
  </div>
  <div class="field">
    <%= f.label :show %><br />
    <%= hidden_field_tag 'category[show]', '0' %>
    <%= check_box_tag('category[show]', value = "1", checked = @category.show) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
